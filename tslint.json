{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "types": ["react", "jest"]
    },
    "exclude": [
        "node_modules",
        "__mocks__",
        "build",
        "config",
        "coverage",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest"
    ]
}
